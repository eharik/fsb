<container id='parlay_container' >
	<div id='parlay_header' class='parlay_header'>
		<div class='left' id='parlay_display'>
			1 Way Parlay
		</div>
		<div class='right' id='parlay_win'>
	    <%= label_tag :to_win, "To Win:" %>
	    <span id="to_win">0</span>
		</div>
		<div class='right' id='parlay_risk'>
			<%= label_tag :bet_risk, "Risk" %>

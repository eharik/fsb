<% matchup_string =  m_string %>
<% if matchup.home_team_id == -1 %>
  <% matchup_string = "#{User.find(matchup.away_team_id).name}       --      BYE" %>
<% end %>
<% if matchup.away_team_id == -1 %>
  <% matchup_string = "#{User.find(matchup.home_team_id).name}       --      BYE" %>
<% end %>
<% if matchup.home_team_id == user_id or matchup.away_team_id == user_id %>
	<% class_string = 'round matchup button selected' %>
<% else %>
	<% class_string = 'round matchup button' %>
<% end %>
  
<div class=<%= "' " + class_string + "'" %> data-home_team_id=<%= matchup.home_team_id %> data-away_team_id=<%= matchup.away_team_id %> >
  <div class='centered top_margin'>
    <pre><%= matchup_string %></pre>
  </div>
</div>

<% if user == current_user %>
  <% open_bets.each do |bet| %>
    <%= render 'layouts/open_bet', :bet => bet, :game => Game.find_by_id(bet.game_id), :winner => bet.winner?, :user => user %> 
  <% end %>
<% end %>
<% past_bets.each do |bet| %>
	<%= render 'layouts/placed_bet', :bet => bet, :game => Game.find_by_id(bet.game_id), :winner => bet.winner?, :user => user %> 
<% end %>
<% parlays.each do |bet| %>
	<%= render 'layouts/parlay', :parlay => bet, :user => user %> 
<% end %>

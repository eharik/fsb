<% week_number = @l.what_week %>
<div id="league_info_container" class="round" data-league_id=<%= params[:id] %> data-user_id=<%= current_user.id %> >
  <div id="league_header">
    <% current_user.leagues.each do |l| %>
      <div class="left">
        <div class="hidden_div_link">
            <%= link_to content_tag(:span, "  "), :controller => "leagues", :action => "show", :id => l.id %>
        </div>
        <%= image_tag l.photo.url(:thumb), :class => "round" %>
      </div>
    <% end %>
    <h1><%= "#{@l.name} - Week #{week_number}"%></h1>
    <nav class="round">
      <ul>
        <% if manager?(@l.id, current_user.id) %>
          <li><%= link_to content_tag(:span, "Admin"),       admin_league_path(@l) %></li>
          <li><%= link_to content_tag(:span, "Edit League"), edit_league_path(@l) %></li>
        <% end %>
        
        <li><%= link_to "Bets", league_bets_path(@l) %></li>
        <li><%= link_to "League Home", league_path(@l) %></li>
      </ul>
    </nav>
  </div>
  
  
  <div class='league_container left round' data-week=<%= week_number %> >
    <h2 class='centered underlined no_bottom_margin'>
      <pre><%= @l.matchup_string( current_user.id, week_number )  %></pre>
    </h2>
    <div id='user_matchup_container' data-week=<%= week_number %> >
      <%= render 'layouts/user_matchup', :week_number => week_number, :user_id => current_user.id, :opponent_id => @l.opponent(current_user.id, week_number), :league_id => @l.id %>
    </div>
  </div>
  <div class='league_container left round'>
    <h2 class='centered underlined no_bottom_margin'>Select a Week</h2>
    <div id='week_list_container'>
      <% for w in 1..(@l.number_of_weeks) %>
        <% if w == week_number %>
          <% sel = "selected" %>
        <% else %>
          <% sel = "" %>
        <% end %>
        <%= render 'layouts/week_button', :week_number => w, :selected =>  sel %>
      <% end %>
    </div>
  </div>
  <div class='league_container left round'>
    <h2 class='centered underlined no_bottom_margin'>League Matchups</h2>
    <div id='week_list_container' data-week=<%= week_number %> >
      <% Matchup.this_week(@m, week_number).each do |m| %>
        <%= render 'layouts/weekly_matchup', :matchup => m, :m_string => @l.matchup_string( m.home_team_id, week_number) %>
      <% end %>
    </div>
  </div>
</div>
<div id="league_info_container" class="round" data-league_id=<%= params[:id] %> >
  
  <div id="league_header">
    <% current_user.leagues.each do |l| %>
      <div class="left">
        <div class="hidden_div_link">
            <%= link_to content_tag(:span, "  "), :controller => "leagues", :action => "show", :id => l.id %>
        </div>
        <%= image_tag l.photo.url(:thumb), :class => "round" %>
      </div>
    <% end %>
    <h1><%= @league.name %></h1>
    <nav class="round">
      <ul>
        <% if manager?(@league.id, current_user.id) %>
          <li><%= link_to content_tag(:span, "Admin"),       admin_league_path(@league) %></li>
          <li><%= link_to content_tag(:span, "Edit League"), edit_league_path(@league) %></li>
        <% end %>
        <li><%= link_to "Bets", league_bets_path(@league) %></li>
      </ul>
    </nav>
  </div>

  <div>
    <ul>
    <% @users.each do |u| %>
      <li class='no_bullet'>
        <%= render 'layouts/user_admin_view', :user => u, :membership => Membership.where(:league_id => @league.id, :user_id => u.id).first, :league => @league %>
      </li>
    <% end %>
    </ul>
  </div>

</div>
$("#league_rank").replaceWith('<pre id="league_rank">League Rank :   <%= escape_javascript( @user.rank(@league) ) %></pre>');
$("#league_credits").replaceWith('<pre id="league_credits"    >Total Credits   : <%= escape_javascript(sprintf("%7d", @current_user_membership.credits.current)) %></pre>');
$("#league_risk").replaceWith('<pre id="league_risk"          >     At Risk       : <%= escape_javascript( sprintf( "%7d", @user.open_bets_risk(@league) ) ) %></pre>');
